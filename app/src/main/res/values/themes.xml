<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CallStatistics" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Each backgrounds initialization -->
        <item name="android:windowBackground">@color/dark_black</item>
        <item name="android:colorBackground">@color/dark_black</item>

        <!-- Text initialization -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_hint</item>

        <item name="materialCalendarTheme">@style/DatePicker</item>
    </style>

    <style name="Theme.CallStatistics" parent="Base.Theme.CallStatistics" />

    <style name="TextCallStatistic" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Level1" parent="TextCallStatistic">
        <item name="android:textSize">@dimen/label_text_lvl_1</item>
    </style>

    <style name="Level2" parent="TextCallStatistic">
        <item name="android:textSize">@dimen/label_text_lvl_2</item>
    </style>

    <style name="Level3" parent="TextCallStatistic">
        <item name="android:textSize">@dimen/label_text_lvl_3</item>
    </style>

    <style name="DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
